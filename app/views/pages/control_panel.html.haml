%ul.flight
  %li= link_to "Settings", edit_website_settings_path
  %li= link_to "Add new page", new_page_path
%ul.control_panel.page
  %h2 Control Panel
  - all_pages.each do |page|
    %li(class= "#{page.name}")
      %strong.large
        = link_to page.name.titleize, "/p/#{page.name}"
      = '-->'
      = link_to "edit", edit_page_path(page)
      |
      = link_to "delete", page_path(page), confirm: "Really delete?", method: :delete
