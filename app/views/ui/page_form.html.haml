%form
  %dl#create_website.centered
    %dd
      %label Page name:
      %input(type="text")
    %dd
      %label Parent page:
      %select
        = 5.times do |index|
          %option= "Page #{index}"
    %dd
      %label Link order:
      %select
        -8.times do |i|
          %option= i + 1
    %dd
      %label Page type:
      %select
        %option static
        %option blog
    %dd
      %label Page body:
      %textarea#body_text
    %dd
      %label
        %input(type="checkbox" value="Save")
        Publish page
    %dd
      %input(type="submit" value="Save Page")
