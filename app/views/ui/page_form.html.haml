%h2 Page Form
%form
  %dl#create_website.centered
    %dd
      %label Page name
      %input(type="text")
    %dd
      %label Parent Page
      %select
        = 5.times do |index|
          %option= "Page #{index}"
    %dd
      %label Page Type
      %select
        %option Static
        %option Blog
    %dd
      %label Page body
      %textarea
