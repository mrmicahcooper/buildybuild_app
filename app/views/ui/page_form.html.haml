%form
  %dl#create_website.centered
    %dd
      %label Page name:
      %input(type="text")
    %dd
      %label Parent page:
      %select
        = 5.times do |index|
          %option= "Page #{index}"
    %dd
      %label Page type:
      %select
        %option static
        %option blog
    %dd
      %label Page body:
      %textarea
    %dd
      %input(type="submit" value="Create page")
